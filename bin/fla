#!/bin/sh

if [ ! "$ANDROID_BUILD_TOP" ]; then
  echo "Couldn't locate the top of the Android"
  exit 1
fi

COMMON_DIR=$ANDROID_BUILD_TOP/../../common/build

obj=$1
case "$obj" in
  aboot)
    fastboot flash aboot $ANDROID_PRODUCT_OUT/emmc_appsboot.mbn
    ;;
  boot)
    fastboot flash boot $ANDROID_PRODUCT_OUT/boot.img
    fastboot reboot
    ;;
  system)
    fastboot flash system $ANDROID_PRODUCT_OUT/system.img
    fastboot reboot
    ;;
  userdata)
    fastboot flash userdata $ANDROID_PRODUCT_OUT/userdata.img
    fastboot reboot
    ;;
  modem)
    fastboot flash modem $COMMON_DIR/bin/asic/NON-HLOS.bin
    fastboot reboot
    ;;
  all)
    fastboot flash boot $ANDROID_PRODUCT_OUT/boot.img
    fastboot flash system $ANDROID_PRODUCT_OUT/system.img
    fastboot flash userdata $ANDROID_PRODUCT_OUT/userdata.img
    fastboot reboot
    ;;
  *)
    echo "Usage: flash_ap.sh [aboot|boot|system|userdata|modem|all]"
    ;;
esac
